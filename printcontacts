# Licensed for public use under the LGPL, .
# For assistance contact fulford@fulford.net 0793 572 8612
########################################################################
cmd=`basename $0`
ver=`echo "$Id: printcontacts,v 1.15 2019/06/04 18:56:34 fulford Exp fulford $"|awk '{print $3,$4,$5}'`
syntax="$cmd [-d]  [-v]|-V"
while [ $# -gt 0 ] ;do
	case $1 in 
		-d) set -x;debug=0;shift;;
		-v) verbose=:;shift;;
		-V) echo "$cmd $Revision: 1.15 $ $Date: 2019/06/04 18:56:34 $"|awk '{print $1,$3,$6}';exit;;  
	esac
done


while [ $# -gt 0 ];do
	case $1 in
		-t) fmt=tif;shift ;;
		-j) fmt=jpg;shift ;;
		-l) tile=$2;shift 2;;
	esac
done
fmt=${fmt:-jpg}
dir=`basename \`pwd\``
if [ $dir = "jpg" -o $dir = "tif" ];then 
	cd ../
fi 
dir=`basename \`pwd\``
title=`echo $dir| awk -F- '{print $1,$2}'`
echo $title

cd $fmt
tot=`ls|wc -w`;echo $tot
c=0
m=40
while [ $c -lt $tot ]; do
	[ $c -gt 0 ] && { 
		p=`expr $p + 1`
		[ $p -lt 2 ] && p=2
		title="$title ($p)"
	}
	batch=`ls |awk 'NR > '$c' && NR <= '$m' {printf "%s ",$1 }'`
	n=`echo $batch|wc -w` 
	c=`expr $c + $n` 
 	[ $n -le 15 ] && tile=5x3
 	[ $n -gt 15 -a $n -le 24 ] && tile=6x4
 	[ $n -gt 24 -a $n -le 28 ] && tile=7x4
 	[ $n -gt 28 -a $n -le 32 ] && tile=8x4 
 	[ $n -gt 32 -a $n -le 40 ] && tile=8x5 
	 [ "$tile" ] ||{
		echo "$cmd: Don't know layout for $n frames">&2
		exit
	}
 	
 	montage -title "$title"  -tile $tile -frame 3  -label %i \
		$batch ../montage$p.jpg
	m=`expr $m + 40`
done
